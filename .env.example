# HolisticaQuant 环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# ==================== LLM配置 ====================
# LLM提供商优先级：豆包 > chatgpt > claude > deepseek
# 至少需要配置一个LLM提供商的API key

# 豆包（字节跳动）- 优先级1
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_API_KEY=
DOUBAO_MODEL=

# ChatGPT (OpenAI) - 优先级2
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Claude (Anthropic) - 优先级3
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# DeepSeek - 优先级4
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# LLM通用配置
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# ==================== 数据源配置 ====================
# 市场数据供应商
MARKET_VENDOR_PRIMARY=akshare
MARKET_VENDOR_FALLBACK=yfinance

# 基本面数据供应商
FUNDAMENTAL_VENDOR_PRIMARY=akshare
FUNDAMENTAL_VENDOR_FALLBACK=yfinance

# 新闻数据供应商
NEWS_VENDOR_PRIMARY=sina
NEWS_VENDOR_FALLBACK=thx

# 缓存配置
USE_CACHE=false  # 是否使用缓存（false表示每次都获取最新数据）

# ==================== Agent配置 ====================
MAX_ITERATIONS=3  # Agent工具调用最大迭代次数（防止无限循环）
MAX_COLLECTION_ITERATIONS=1  # 最大数据收集迭代次数（data_analyst重复收集数据的最大次数）
REFLECTION_ENABLED=true  # 是否启用反思机制
QUALITY_THRESHOLD=0.6  # 质量阈值
MAX_RETRIES=1  # 最大重试次数

# ==================== 工具配置 ====================
# 工具结果和记录数限制
TOOL_MAX_RESULT_LENGTH=4000  # 工具结果最大长度（字符），超过此长度会被截断以节省token
TOOL_MAX_RECORDS=50  # 工具返回的最大记录数（用于限制数据源返回的数据量）

# 新闻工具配置
# 新浪新闻工具
TOOL_SINA_NEWS_ENABLED=true  # 是否启用新浪新闻工具
TOOL_SINA_NEWS_END_PAGE=5  # 新浪新闻爬取结束页码（限制爬取页数，减少API调用量）

# 同花顺新闻工具
TOOL_THX_NEWS_ENABLED=false  # 是否启用同花顺新闻工具（默认禁用，简化工具列表）
TOOL_THX_NEWS_MAX_PAGES=5  # 同花顺新闻最大爬取页数（限制爬取页数，减少API调用量）

# ==================== Agentic RAG配置 ====================
# Agentic RAG：智能检索增强生成，用于策略分析的记忆和推理
AGENTIC_RAG_ENABLED=false  # 是否启用Agentic RAG（默认关闭）
AGENTIC_RAG_VECTOR_STORE_ENABLED=false # 
AGENTIC_RAG_MAX_INSIGHTS=10  # 最大洞见数量（超过此数量会自动删除旧洞见）
AGENTIC_RAG_FORGET_DAYS=9 # 洞见遗忘天数（超过此天数的洞见会被删除）
AGENTIC_RAG_EXTRACT_INSIGHTS=true  # 是否提取新洞见（如果关闭，只检索不保存）

# ==================== 调试配置 ====================
DEBUG=false  # 是否启用调试模式（true会显示详细的DEBUG日志）
